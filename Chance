import java.util.ArrayList;
import java.util.Random;

// make it so that when a player lands on a spot with chance card pull, this gets called
public class Chance {
	ArrayList cards = new ArrayList<ChanceCard>();

	ArrayList discards = new ArrayList<ChanceCard>();

	@SuppressWarnings("unchecked")
	public void ChanceDeck() {

		discards.add(new ChanceCard(0, "Get out of Jail Free"));
		// can be sold and or sold until needed
		discards.add(new ChanceCard(1, "Pay Poor Tax"));
		// 15
		discards.add(new ChanceCard(2, "Elected Chairman of the Board"));
		// pay each player 50
		discards.add(new ChanceCard(3, "Bank Pays"));
		// dividend of 50
		discards.add(new ChanceCard(4, "Your building loan matures"));
		// collect 150
		discards.add(new ChanceCard(5, "Make General Repairs on all Property"));
		// for each house 25, hotel 100
		discards.add(new ChanceCard(6, "GO TO JAIL"));
		discards.add(new ChanceCard(7, "Advance to Go"));
		// collect 200
		discards.add(new ChanceCard(8, "Advance to St. Charles Place"));
		// collect 200 if passed GO
		discards.add(new ChanceCard(9, "Advance to Boardwalk"));
		// can buy if unowned
		discards.add(new ChanceCard(10, "Advance to Nearest Utility"));
		// if unowned, can buy. if owned, roll dice and pay player x10 amount
		// thrown
		discards.add(new ChanceCard(11, "Advance to Illinois Avenue"));
		// collect 200 if passed GO
		discards.add(new ChanceCard(12, "Advance to reading"));
		discards.add(new ChanceCard(13, "Go back 3 spaces"));
		// pay rent if landed on owned property
		discards.add(new ChanceCard(14, "Advance to nearest Railroad"));
		// pay owner twice the rent amount , else can buy
		discards.add(new ChanceCard(15, "Take a trip to nearest Railroad"));
		// if pass go collect 200
		discards.add(new ChanceCard(16, "You have won a crossword competition"));
		// collect 100

		shuffle();
	}

	public void shuffle() {

		System.out.println("shuffling chance deck");

		Random random = new Random();
		while (discards.size() > 0) {
			int index = Math.abs(random.nextInt()) % discards.size();
			cards.add(discards.get(index));
			discards.remove(index);
		}
	}
	
	
	public void getCard(){
		
		
		
	}

	class ChanceCard {

		public int type;
		public String label;

		public ChanceCard(int cardtype, String cardname) {

			type = cardtype;
			label = cardname;
		}
	}
}
